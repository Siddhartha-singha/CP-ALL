#include <bits/stdc++.h>
#include <string>
using namespace std;

int main(){
    int n;
    cin>>n;
    while(n--){
        string word;
        cin>>word;
        if(word.length()>10){
            cout<<word.front()<<word.length()-2<<word.back()<<endl; //[without Front and Back latter (-2) mean] -> word length()-2
        }
        else {
            cout<<word<<endl;
        }
    }
    return 0;
}
